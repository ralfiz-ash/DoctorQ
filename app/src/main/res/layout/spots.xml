    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:elevation="1dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars"
