        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainCard"
        app:layout_constraintBottom_toBottomOf="@id/mainCard"/>

    <androidx.appcompat.widget.AppCompatImageView
